<h1>Profile</h1>
<ul>
  <li>Name: <%= @profile.name%></li>
  <li>Description: <%= @profile.description%></li>
  <%if @skills%>
    <ul>
      <%@skills.each do |skill|%>
        <li><%=skill.name%></li>
      <%end%>
    </ul>
  <%end%>
</ul>
<%= link_to "Update Profile", "/profiles/#{@profile.id}/edit"%>

<% if @blog_entries.length > 1 %>
  <h2>Blog Entries:</h2>
  <% @blog_entries.each do |entry|%>
    <h3><%= entry.title %></h3>
    <p><%= entry.body %></p>
  <% end %>
<% end %>

<%= render "blog_entries/form"%>
