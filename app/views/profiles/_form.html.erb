<%= render "layouts/errors", :object => @profile %>
<%= form_for @profile do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br>
  <%= f.label :description %>
  <%= f.text_field :description %> <br>
  <%= f.radio_button :kind, 'worker', :checked => true %>
  <%= label :kind_worker, 'Worker' %>
  <%= f.radio_button :kind, 'employer' %>
  <%= label :kind_employer, 'Employer' %>
  <h3>Skills:</h3>

  <% @skills.each do |skill|%>
    <%=skill.name%>
    <%if @profile.skills.find_by(name: skill.name)%>
      <%= check_box("skill", skill.name, {checked: true})%><br>
    <%else%>
      <%= check_box("skill", skill.name, {checked: false})%><br>
    <%end%>
  <%end%>
  <br>
  <%= f.submit %>
<% end %>

<%= link_to "Create New Skills", "/skills/new"%>
